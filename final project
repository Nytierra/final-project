<script>
        const products = document.querySelectorAll('.product');
        const cartItems = document.getElementById('cart-items');
        const cartTotal = document.getElementById('cart-total');

        let totalPrice = 0;
        const cart = [];

        products.forEach(product => {
            const addToCartBtn = product.querySelector('button');
            addToCartBtn.addEventListener('click', () => {
                const name = product.querySelector('h3').textContent;
                const price = parseFloat(product.querySelector('p').textContent.replace(/[^\d.-]/g, ''));
                const item = { name, price };
                cart.push(item);
                renderCart();
            });
        });

        function renderCart() {
            cartItems.innerHTML = '';
            totalPrice = 0;
            cart.forEach(item => {
                const cartItem = document.createElement('div');
                cartItem.textContent = `${item.name} - $${item.price.toFixed(2)}`;
                cartItems.appendChild(cartItem);
                totalPrice += item.price;
            });
            cartTotal.textContent = totalPrice.toFixed(2);
            document.getElementById('cart').style.display = 'block';


        }

document.getElementById('checkout-btn').addEventListener('click', () => {
            
            alert('Checkout clicked!');
document.getElementById('bank-info-form').style.display = 'block';
        });

document.getElementById("apply-coupon-btn").addEventListener("click", function() {
    var couponCode = document.getElementById("coupon-code").value;
    // Check if the entered coupon code is "SPRING20"
    if (couponCode === "SPRING20") {
        var currentTotal = parseFloat(document.getElementById("cart-total").innerText);
        var discount = currentTotal * 0.20; // 20% discount
        var newTotal = currentTotal - discount;
        document.getElementById("cart-total").innerText = newTotal.toFixed(2);
        alert("Coupon applied successfully! You saved $" + discount.toFixed(2));
    } else {
        alert("Invalid coupon code");
    }



});


document.getElementById('bank-form').addEventListener('submit', (event) => {
    event.preventDefault(); // Prevent the form from submitting normally

   
    const cardNumber = document.getElementById('card-number').value;
    const expirationDate = document.getElementById('expiration-date').value;
    const cvv = document.getElementById('cvv').value;

    

    // For demonstration, let's just log the entered card information
    console.log('Card Number:', cardNumber);
    console.log('Expiration Date:', expirationDate);
    console.log('CVV:', cvv);
    Console.log('Shipping Address:', shippingAddress);


    document.getElementById('bank-info-form').style.display = 'none';
   });
  </script>

